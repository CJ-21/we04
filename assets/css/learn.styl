@import 'vars'

.logo img
	width 100%
	height 200px
	object-fit contain
	
.logo:last-child
	margin-bottom 60px
	
.logo a
	cursor pointer
	
@media (min-width: breakpoint-tablet)
	
	.logo img
		width 200px
		height 200px
		object-fit contain
		margin .5em
		
	.logo-contain
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content center
		
@media (min-width: breakpoint-desktop)

	.logo img
		width 200px
		height 200px
		object-fit contain
		margin 1em
		
	.logo-contain
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content center
		
@media (min-width: breakpoint-xl)

	.logo img
		width 300px
		height 300px
		object-fit contain
		margin 1em
		
	.logo-contain
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content center