@import 'vars'

svg 
	border 1px solid black
		
		
.bar_forms form 
	margin-left 1em
	margin-bottom 4px


#add_bar_form 
	margin-left 1em
	margin-bottom 4em

text 
	font-family 'Comic Sans MS'
	font-size 1em
	
.bar_forms
	font-size .75em
	display flex
	flex-direction column
	justify-content center

.bar_forms form
	display flex
	
#add_bar_form
	font-size .75em
	display flex
	justify-content center
	margin 0


line, path 
	stroke-width 2px
		
#graph
	display flex
	justify-content center
	
.data-contain
	display flex
	justify-content center
	margin-bottom 100px

button
	color tomato
	background none
	border none
	
#add-bar
	color dodgerblue
	background none
	border none
	
.data-contain input
	border none
	
@media (min-width: breakpoint-tablet)

	.bar_forms
		font-size .75em

	#add_bar_form
		font-size .75em
	
	#graph
		margin-bottom 100px
		
@media (min-width: breakpoint-desktop)

	.bar_forms
		font-size 1.2em

	#add_bar_form
		font-size 1.2em
	
	#graph
		margin-bottom 0
	







